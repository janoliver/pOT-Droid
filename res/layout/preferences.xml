<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:key="first_preferencescreen">
    <PreferenceCategory
            android:title="Allgemeines">
    
	    <Preference
	          android:title="Login"
	          android:summary="mods.de Forum Login"
	          android:key="loginPref" />
	     
	    <Preference
              android:title="About"
              android:summary="Über diese App"
              android:key="aboutPref" />
    </PreferenceCategory>
    
    <PreferenceCategory
            android:title="Navigation">
        
         <ListPreference
             android:title="Startseite"
             android:summary="Was soll als Startactivity für die App dienen?"
             android:key="startActivity"
             android:defaultValue="0"
             android:entries="@array/startActivity"
             android:entryValues="@array/startActivityValues" />
         
         <ListPreference 
             android:title="Startforum"
             android:summary="Nur wichtig, falls 'Startseite' auf 'Forum' steht"
             android:key="startForum"
             android:defaultValue="14"/>
            
        <ListPreference 
             android:title="Ziel mata/search Button"
             android:key="mataloc" 
             android:summary="Wohin führt der Mata/Search button" 
             android:entries="@array/mataLoc"
             android:entryValues="@array/mataLocValues" />
        
        <CheckBoxPreference
            android:key="volumeControl"
            android:defaultValue="false"
            android:summary="Volume buttons zum Blättern nutzen."
            android:title="Volume Buttons blättern!" />
        
        <ListPreference 
            android:title="Touch Dauer für Post-Menüs"
            android:key="topicTouchDuration" 
            android:summary="Touch Dauer bis das Post-Menü erscheint." 
            android:entries="@array/touchDuration"
            android:entryValues="@array/touchDurationValues" />
        
    </PreferenceCategory>
    
    <PreferenceCategory
            android:title="Style">
        <ListPreference
             android:title="Bilder Laden"
             android:summary="Bilder im Thread laden"
             android:key="loadImages"
             android:defaultValue="0"
             android:entries="@array/loadImages"
             android:entryValues="@array/loadImagesValues" />
        
        <ListPreference 
             android:title="Style Sonstiges"
             android:key="theme" 
             android:summary="Style der restlichen Ansichten wählen." 
             android:defaultValue="0"
             android:entries="@array/themes"
             android:entryValues="@array/themesValues" />
        
        <CheckBoxPreference
            android:key="marknewposts"
            android:title="Ungelesene Posts markieren" />
        
        <CheckBoxPreference
            android:key="posticons"
            android:title="Post Icons anzeigen" />
            
        <CheckBoxPreference
            android:key="gravityInThreads"
            android:defaultValue="false"
            android:summary="Auto-scroll nach links in Threads."
            android:title="Scrollt automatisch wieder nach links in der Thread Ansicht." />
        
        <CheckBoxPreference
            android:key="resizeImages"
            android:defaultValue="true"
            android:summary="Bilder automatisch verkleinern"
            android:title="Sollen Bilder automatisch verkleinert werden?" />
        
    </PreferenceCategory>
    
    
    
    <PreferenceCategory
            android:title="Benachrichtigungen">
            <CheckBoxPreference
                android:key="notifications"
                android:defaultValue="false"
                android:title="Benachrichtigungen aktivieren" />
            <ListPreference 
                android:title="Refresh Intervall"
                android:key="notificationrefresh" 
                android:summary="Wie häufig nach neuen Posts geschaut wird." 
                android:entries="@array/notificationRefreshTime"
                android:entryValues="@array/notificationRefreshTimeValues" />
            <CheckBoxPreference
                android:key="newPostsNotifications"
                android:defaultValue="false"
                android:title="Bei neuen Posts in starred Topics benachrichtigen." />
            <CheckBoxPreference
                android:key="newPmNotifications"
                android:defaultValue="false"
                android:title="Bei neuer PM benachrichtigen." />
    </PreferenceCategory>
    
    
</PreferenceScreen> 