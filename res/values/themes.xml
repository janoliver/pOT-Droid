<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PotLight" parent="android:Theme.Light">
        <item name="textColor1">#000000</item>
        <item name="textColor2">#333333</item>
        <item name="textColor3">#666666</item>
        <item name="bgColor1">#ffffff</item>
        <item name="bgColor2">#000000</item>
        <item name="bgColor3">#000000</item>
    </style>
    
    <style name="PotDark" parent="android:Theme.Black">
        <item name="textColor1">#ffffff</item>
        <item name="textColor2">#eeeeee</item>
        <item name="textColor3">#bbbbbb</item>
        <item name="bgColor1">#000000</item>
        <item name="bgColor2">#ffffff</item>
        <item name="bgColor3">#ffffff</item>
    </style>
    
    <style name="GenericProgressBackground" parent="android:Theme">
	    <item name="android:layout_width">wrap_content</item>    
	    <item name="android:layout_height">wrap_content</item>  
	    <item name="android:gravity">center</item>  
	</style>
	<style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:indeterminate">true</item> 
	</style>
</resources>