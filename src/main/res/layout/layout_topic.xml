<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.mde.potdroid.views.BBSwipeRefreshLayout
            android:id="@+id/ptr_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/ic_action_bb"
            fab:fab_colorNormal="?attr/bbColorSecondary"
            fab:fab_colorPressed="?attr/bbColorPrimary"
            fab:fab_colorRipple="@color/transparent"/>
</FrameLayout>